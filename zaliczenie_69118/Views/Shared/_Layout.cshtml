<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kofi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/zaliczenie_69118.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="container-fluid navigation-container">
        <nav class="navigation">
            <h1>
                <a class="no-link" asp-controller="Home" asp-action="Index">.kofi</a>
            </h1>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <a class="order-link" asp-controller="Order" asp-action="Index">Zamówienia</a>
                </div>
                <div class="col-8 text-right">
                    &copy; 2023 - Created by Patryk Jelonek - 69118
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

