@model zaliczenie_69118.Models.Order

@{
    ViewData["Title"] = "Edit order no. " + @Model?.Id;
}

<h1>Edit order no. @Model?.Id</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-2">
                <label asp-for="BrewingMethod" class="control-label"></label>
                <input asp-for="BrewingMethod" class="form-control form-control-lg" readonly />
                <span asp-validation-for="BrewingMethod" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Grammage" class="control-label"></label>
                <input asp-for="Grammage" class="form-control form-control-lg" readonly />
                <span asp-validation-for="Grammage" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control form-control-lg" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control form-control-lg" readonly />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control form-control-lg" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control form-control-lg" readonly />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control form-control-lg" readonly />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Status" for="floatingSelect">Select order status</label>
                <select asp-for="Status" class="form-select form-select-lg" id="floatingSelect" aria-label="Select order status">
                    <option selected>Open this select menu</option>
                    <option value="New">New</option>
                    <option value="In Transit">In Transit</option>
                    <option value="Delivered">Delivered</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a asp-action="Index">Back to List</a>
</div>
